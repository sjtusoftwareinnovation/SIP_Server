<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.amateur.sip.server.mapper.CompetitionCommentMapper">

    <!-- general result map -->
    <resultMap id="BaseResultMap" type="com.amateur.sip.server.entity.CompetitionComment">
        <id column="id" property="id"/>
        <result column="competitionId" property="competitionId"/>
        <result column="userId" property="userId"/>
        <result column="content" property="content"/>
    </resultMap>

    <select id="selectByCompetition" resultType="com.amateur.sip.server.entity.CompetitionComment">
        SELECT bc.*,u.username as username
        from competition_comment bc inner join user u on bc.userId=u.id
        where bc.competitionId=#{competitionId}
    </select>
</mapper>
